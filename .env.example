# =====================================================
# BookTutor - Environment Variables
# Copy this file to .env and fill in the values
# =====================================================

# ===================
# Environment
# ===================
ENVIRONMENT=dev
DEBUG=true
DOMAIN=localhost

# ===================
# Ports
# ===================
API_PORT=8000
FRONTEND_PORT=3000
QDRANT_PORT=6333

# ===================
# Security (REQUIRED in production)
# ===================
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32

# ===================
# Database
# ===================
POSTGRES_USER=booktutor
POSTGRES_PASSWORD=booktutor
POSTGRES_DB=booktutor
DATABASE_URL=postgresql://booktutor:booktutor@localhost:5432/booktutor

# ===================
# Qdrant Vector DB
# ===================
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=  # Optional, for Qdrant Cloud

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# LLM Configuration
# ===================
# Ollama (development)
OLLAMA_BASE_URL=http://localhost:11434

# vLLM (production)
# VLLM_BASE_URL=http://localhost:8080

# Default model
DEFAULT_LLM_PROVIDER=ollama
DEFAULT_LLM_MODEL=qwen3:8b

# ===================
# RAG Settings
# ===================
EMBEDDING_MODEL=bge-m3
EMBEDDING_DIMENSIONS=1024
CHUNK_SIZE=1500
CHUNK_OVERLAP=150
RETRIEVER_K=6
MIN_RELEVANCE_SCORE=0.25

# ===================
# Frontend
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
BACKEND_URL=http://localhost:8000/api/v1
