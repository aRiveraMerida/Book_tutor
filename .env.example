# ================================
# BookTutor - Environment Variables
# ================================
# Copy this file to .env and adjust values

# ===================
# Domain & URLs
# ===================
DOMAIN=localhost
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# ===================
# Ollama (LLM)
# ===================
OLLAMA_BASE_URL=http://localhost:11434

# Models (optimizado para bajo coste)
DEFAULT_LLM_MODEL=qwen3:4b
EMBEDDING_MODEL=bge-m3

# ===================
# Qdrant (Vector Store)
# ===================
QDRANT_URL=http://localhost:6333

# ===================
# RAG Settings (optimizado)
# ===================
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
RETRIEVER_K=4
MIN_RELEVANCE_SCORE=0.3
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.2

# ===================
# Ports (for Docker)
# ===================
API_PORT=8000
FRONTEND_PORT=3000

# ===================
# GitHub (CI/CD)
# ===================
# GITHUB_REPOSITORY=tu-usuario/Book_tutor
# VERSION=latest
